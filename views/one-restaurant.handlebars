<div class="container">
  <div class="row">
    <div class="col-lg-6 mt-5 mx-auto">
      <div class="card text-center d-flex justify-content-center">
        <div class="card-body">
          <h5 class="card-title">{{attraction.name}}</h5>
          <h6 class="card-subtitle mb-4  text-muted">Cuisine: {{attraction.cuisine}}</h6>
          <p class="card-text mt-0">{{attraction.price}}</p>
          <p class="card-text mt-1">Established: {{attraction.year}}</p>
          <p class="card-text mt-0">{{attraction.location}}</p>
          <a href="{{attraction.url}}" class="card-link" target="_blank">Michelin Guide</a>
        </div>
      </div>
    </div>
  </div>
</div>

{{!-- add review: --}}
<div class="container">
  <div class="input-group mb-5 mt-5 col-sm-4 d-flex justify-content-center">
    <div class="col-sm-4">
      <input type="text" class="form-control" placeholder="Add a review..." aria-label="Add a review..."
        aria-describedby="button-addon2" id="comment-input" rows="5">
    </div>
    <button data-id="{{attraction.id}}" class="btn btn-secondary" type="button"
      id="submit-button">Submit</button>

  </div>
</div>

{{!-- <div id="comment-output"></div> --}}
{{#if attraction.reviews}}
<div class="d-flex justify-content-center mb-4">
  <h4 class="title">Reviews</h4>
</div>
{{/if}}

{{!-- list of reviews --}}
<div class="container">
  {{#each attraction.reviews as |review|}}
  <div>
    <div class="card mb-3">
      <div class="card-body">
        <p>{{review.body}}</p>
        <p>Posted by: {{review.user.username}} on {{format_date review.createdAt}} </p>
      </div>
    </div>
  </div>
  {{/each}}
</div>

<br><br><br>

<script src="/js/one-restaurant.js"></script>