  <div class="card-body row justify-content-evenly">
    <h5 class="card-title">{{attraction.name}}</h5>
    <h6 class="card-subtitle mb-4 text-muted">{{attraction.cuisine}}</h6>
    <p class="card-text mt-1">{{attraction.year}}
    <p class="card-text mt-0">{{attraction.phonenumber}}
    <p class="card-text mt-0">{{attraction.location}}
    <p class="card-text mt-0">{{attraction.price}}</p>
   <a href="{{attraction.url}}" class="card-link">{{attraction.url}}</a>
  </div>
</div>
</div>
<div class="input-group input-group-lg mb-5 mt-5">
  <span class="input-group-text" id="inputGroup-sizing-lg">{{Username}}</span>
  <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg">
</div>
<div class="input-group input-group-lg mb-5 mt-5">
  <span class="input-group-text" id="inputGroup-sizing-lg">{{Username}}</span>
  <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg">
</div>
<div class="input-group mb-5 mt-5">
  <input type="text" class="form-control" placeholder="Comment..." aria-label="Comment..."
    aria-describedby="button-addon2" id="comment-input">
  <button class="btn btn-outline-secondary" type="button" id="submit-button">Submit</button>
</div>

<div id="comment-output"></div>

<script>
  // Add an event listener to the submit button
  const submitButton = document.getElementById("submit-button");
  submitButton.addEventListener("click", function () {
    // Get the value of the comment input field
    const commentInput = document.getElementById("comment-input");
    const comment = commentInput.value;

    // Update the comment output element with the entered comment
    const commentOutput = document.getElementById("comment-output");
    commentOutput.textContent = comment;
  });
</script>

