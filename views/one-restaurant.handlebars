{{!-- reviews: --}}
<div class="container">
{{#each attraction.reviews as |review|}}
<div>
 <div class="card mb-3">
    <div class="card-body">
      <h5 class="card-title">{{review.user.username}}</h5>
      <p class="card-text">"{{review.body}}"</p>
      <p class="card-text">{{format_date review.createdAt}}</p>
  </div>
  </div>
{{/each}}
</div>

